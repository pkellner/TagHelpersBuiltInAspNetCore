@{
    Layout = "";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">

<head>
    <title>Form Builder: Bug Report Demo</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="keywords" content="demo, form, bug report" />
    <meta name="description" content="Formoid will help you create and publish online stylish forms without writing a single line of code. Free Form Builder" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico" />
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Droid+Sans|Droid+Serif:400,400italic,700italic">
    <link rel="stylesheet" href="styles/fontello/css/fontello.css">
    <link rel="stylesheet" href="styles/main.css" type="text/css" />
    

</head>

<body bgcolor="#ffffff" style="overflow: hidden; margin: 25px 25px 25px 25px;">


    <!-- Start Formoid form-->
    <link rel="stylesheet" href="/demo/bug-report-flat/flat/formoid-flat-green.css" type="text/css" />
    <script type="text/javascript" src="/demo/bug-report-flat/flat/jquery.min.js"></script>
    <form enctype="multipart/form-data" class="formoid-flat-green" style="background-color:#ffffff;font-size:14px;font-family:'Lato', sans-serif;color:#666666;max-width:480px;min-width:150px" method="post">
        <div class="title"><h2>Incident Report</h2></div>
        <div class="element-input"><label class="title">Title:<span class="required">*</span></label><input class="large" type="text" name="input" required="required" /></div>
        <div class="element-textarea"><label class="title">Description:<span class="required">*</span></label><textarea class="small" name="textarea" cols="20" rows="5" required="required"></textarea></div>
        <div class="element-select">
            <label class="title">Operating system:</label><div class="large">
                <span>
                    <select name="select">

                        <option value="Windows-8">Windows 8</option>
                        <option value="Windows-10">Windows 10</option>
                        <option value="OSX10-7">Mac OS X 10.7</option>
                        <option value="OSX10-8">Mac OS X 10.8</option>
                    </select><i></i>
                </span>
            </div>
        </div>
        <div class="element-select">
            <label class="title">Product:<span class="required">*</span></label><div class="large">
                <span>
                    <select name="select1" required="required">

                        <option value="PremierePro">Premiere Pro</option>
                        <option value="MicrosoftWord">Microsoft Word</option>
                        <option value="AppleKeynote">Apple Keynote</option>
                    </select><i></i>
                </span>
            </div>
        </div>
        <div class="element-input"><label class="title">Version:<span class="required">*</span></label><input class="small" type="text" name="input1" required="required" /></div>
        <div class="element-radio">
            <label class="title">License:</label>		
            <div class="column column2"><label><input type="radio" name="radio" value="Personal" /><span>Personal</span></label></div><span class="clearfix"></span>
            <div class="column column2"><label><input type="radio" name="radio" value="Business" /><span>Business</span></label></div><span class="clearfix"></span>
        </div>
        <div class="element-select">
            <label class="title">Severity:</label><div class="large">
                <span>
                    <select name="select2">

                        <option value="Critical">Critical</option>
                        <option value="Important">Important</option>
                        <option value="Normal">Normal</option>
                        <option value="Minor">Minor</option>
                    </select><i></i>
                </span>
            </div>
        </div>
        <div class="element-file"><label class="title">Attachments:</label><label class="large"><div class="button">Choose File</div><input type="file" class="file_input" name="file" /><div class="file_text">No file selected</div></label></div>
        <div class="submit"><input type="submit" value="Send" /></div>
    </form>
    <script type="text/javascript" src="/demo/bug-report-flat/flat/formoid-flat-green.js"></script>

    <!-- Stop Formoid form-->



</body>

</html>
